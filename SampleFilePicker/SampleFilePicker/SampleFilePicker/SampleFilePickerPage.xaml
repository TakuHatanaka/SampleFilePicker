<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleFilePicker.SampleFilePickerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="サンプルファイルピッカー">

    <StackLayout Margin="10">
        <Label
            FontSize="24"
            HorizontalOptions="Start"
            Text="選択したファイル名"
            TextColor="Black" />
        <Label
            x:Name="lblFileName"
            BackgroundColor="Purple"
            FontSize="24"
            HorizontalOptions="FillAndExpand"
            TextColor="White" />
        <Button
            x:Name="btnFileSelect"
            BackgroundColor="Blue"
            BorderRadius="5"
            FontSize="24"
            Text="ファイル選択"
            TextColor="White"
            VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentPage>